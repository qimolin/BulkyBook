@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Book
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Book Name
            </th>
            <th>
                Genre
            </th>
            <th>
                Rating
            </th>
            <th>
                Date
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Book book in Model)
        {
            <tr>
                <td width="20%">
                    @book.Name
                </td>
                <td width="20%">
                    @book.Genre
                </td>
                <td width="20%">
                    @book.Rating
                </td>
                <td width="20%">
                    @book.CreatedDateTime
                </td>
                <td width="20%">
                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id"
                    class="btn btn-primary mx-2"><i class="bi bi-pencil-square mx-1"></i>Edit</a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id"
                   class="btn btn-danger mx-2"><i class="bi bi-trash-fill mx-1"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

