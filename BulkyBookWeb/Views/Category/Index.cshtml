@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category category in Model)
        {
            <tr>
                <td width="50%">
                    @category.Name
                </td>
                <td width="30%">
                    @category.DisplayOrder
                </td>
                <td width="20%">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                    class="btn btn-primary mx-2"><i class="bi bi-pencil-square mx-1"></i>Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                   class="btn btn-danger mx-2"><i class="bi bi-trash-fill mx-1"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

